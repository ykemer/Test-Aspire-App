@implements IAsyncDisposable
@page "/admin/courses"
@using Aspire_App.Web.Components.Shared
@using Aspire_App.Web.Helpers
@using Aspire_App.Web.Services.Courses
@using Aspire_App.Web.Services.Hubs
@using Contracts.Common
@using Contracts.Courses.Hub
@using Contracts.Courses.Responses
@attribute [Authorize]

@rendermode InteractiveServer

@attribute [StreamRendering]
@attribute [OutputCache(Duration = 5)]

@inject ICoursesApiService CoursesApiService
@inject CoursesHubService CoursesHubService


<PageTitle>Courses</PageTitle>

<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Courses</h1>
    <NavLink href="/admin/courses/create" class="btn btn-primary">
      + Create Course
    </NavLink>
  </div>
  @if (_successMessage is not null)
  {
    <div class="alert alert-success" role="alert">@_successMessage</div>
  }

  @if (_errorMessage is not null)
  {
    <div class="alert alert-danger" role="alert">@_errorMessage</div>
  }

  @if (!_isDataLoaded)
  {
    <div class="d-flex justify-content-center align-items-center py-5">
      <div class="spinner-border text-primary" role="status" aria-label="Loading courses"></div>
      <span class="ms-2 text-muted">Loading courses...</span>
    </div>
  }
  else if (_courses is null || _courses?.Items.Count == 0)
  {
    <div class="card shadow-sm">
      <div class="card-body text-center py-5">
        <p class="text-muted mb-3">No courses found.</p>
        <NavLink href="/admin/courses/create" class="btn btn-primary">
          Create your first course
        </NavLink>
      </div>
    </div>
  }
  else
  {
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
            <tr>
              <th style="width:45%">Name</th>
              <th style="width:15%">Enrolled Students</th>
              <th class="text-end" style="width:40%">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var course in _courses.Items)
            {
              var isLoading = _processingCourseId == course.Id;
              <tr>
                <td class="fw-semibold">@course.Name</td>
                <td>
                  <span class="badge text-bg-secondary">@course.TotalStudents</span>
                </td>
                <td class="text-end">
                  <div class="btn-group" role="group" aria-label="Actions for @course.Name">
                    <NavLink href="@($"/admin/courses/{course.Id}/enrollments")" class="btn btn-outline-info btn-sm">
                      Students
                    </NavLink>
                    <NavLink href="@($"/admin/courses/{course.Id}")" class="btn btn-outline-secondary btn-sm">
                      Edit
                    </NavLink>
                    <NavLink href="@($"/admin/courses/{course.Id}/classes")" class="btn btn-outline-primary btn-sm">
                      Classes
                    </NavLink>
                    @if (isLoading)
                    {
                      <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                      <span class="ms-1">Deleting...</span>
                    }
                    else
                    {
                      <button class="btn btn-outline-danger btn-sm" @onclick="() => ShowDeleteConfirmation(course.Id)">
                        Delete
                      </button>
                    }

                  </div>
                </td>
              </tr>
            }
            </tbody>
          </table>
        </div>
      </div>
      @if (_courses.TotalPages > 1)
      {
        <div class="card-footer bg-white">
          <div class="d-flex justify-content-center">
            <Pager records="_courses" ChangePage="LoadCoursesAsync"/>
          </div>
        </div>
      }
    </div>
  }
</div>

@if (_showDeleteConfirmation)
{
  <Modal Title="Confirm Delete" OnConfirm="ConfirmDelete" OnCancel="CancelDelete">
    <p>Do you really want to delete this course?</p>
  </Modal>
}


@code {
  private PagedList<CourseListItemResponse>? _courses;
  private bool _showDeleteConfirmation;
  private Guid _courseIdToDelete;
  private Guid? _processingCourseId;
  private string? _errorMessage;
  private string? _successMessage;
  private bool _isDataLoaded;
  private bool _isHubInitialized;

  private static readonly string[] CourseHubSuccessMessages =
  [
    CourseHubMessage.CourseCreated,
    CourseHubMessage.CourseUpdated,
    CourseHubMessage.CourseDeleted,
  ];

  private static readonly string[] CourseHubErrorMessages =
  [
    CourseHubMessage.CourseCreateRequestRejected,
    CourseHubMessage.CourseUpdateRequestRejected,
    CourseHubMessage.CourseDeleteRequestRejected
  ];

  protected override async Task OnAfterRenderAsync(bool firstRender)
  {
    if (firstRender)
    {
      await LoadCoursesAsync();
      await InitializeHubConnectionAsync();

      _isDataLoaded = true;
      StateHasChanged();
    }
  }

  private async Task LoadCoursesAsync(int page = 1)
  {
    _courses = await CoursesApiService.GetCoursesListAsync(page);
  }

  private async Task InitializeHubConnectionAsync()
  {
    if (_isHubInitialized) return;

    try
    {
      CoursesHubService.OnCourseNotification += HandleNotification;
      await CoursesHubService.StartConnectionAsync();
      _isHubInitialized = true;
    }
    catch (Exception ex)
    {
      _errorMessage = $"Error initializing course notifications: {ex.Message}";
    }
  }

  private void HandleNotification(CourseMessage message)
  {
    if (CourseHubSuccessMessages.Contains(message.MessageType))
    {
      HandleSuccessMessage(message);
    }
    else if (CourseHubErrorMessages.Contains(message.MessageType))
    {
      HandleErrorMessage(message);
    }

    if (IsDeleteMessage(message.MessageType))
    {
      _processingCourseId = null;
    }
  }

  private void HandleSuccessMessage(CourseMessage message)
  {
    _successMessage = message.Message;
    _ = InvokeAsync(async () =>
    {
      await LoadCoursesAsync();
      StateHasChanged();
    });
  }

  private void HandleErrorMessage(CourseMessage message)
  {
    _errorMessage = message.Message;
    _ = InvokeAsync(StateHasChanged);
  }

  private static bool IsDeleteMessage(string messageType) =>
    messageType == CourseHubMessage.CourseDeleted ||
    messageType == CourseHubMessage.CourseDeleteRequestRejected;

  private void ShowDeleteConfirmation(Guid courseId)
  {
    _courseIdToDelete = courseId;
    _showDeleteConfirmation = true;
  }

  private async Task ConfirmDelete()
  {
    _showDeleteConfirmation = false;
    _processingCourseId = _courseIdToDelete;
    await CoursesApiService.DeleteCourse(_courseIdToDelete);
  }

  private void CancelDelete()
  {
    _showDeleteConfirmation = false;
  }

  public async ValueTask DisposeAsync()
  {
    if (!_isHubInitialized) return;
    CoursesHubService.OnCourseNotification -= HandleNotification;
    await CoursesHubService.StopConnectionAsync();
    _isHubInitialized = false;
  }
}
