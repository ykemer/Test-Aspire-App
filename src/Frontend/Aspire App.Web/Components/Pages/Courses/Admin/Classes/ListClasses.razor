@implements IAsyncDisposable
@page "/admin/courses/{courseId:guid}/classes"
@using Aspire_App.Web.Components.Shared
@using Aspire_App.Web.Services.Courses
@using Aspire_App.Web.Exceptions
@using Aspire_App.Web.Helpers
@using Aspire_App.Web.Services.Hubs
@using Contracts.Classes.Hub
@using Contracts.Common
@using Contracts.Courses.Responses
@attribute [Authorize]

@rendermode InteractiveServer

@attribute [StreamRendering]
@attribute [OutputCache(Duration = 5)]

@inject ICoursesApiService CoursesApiService
@inject IClassesApiService ClassesApiService
@inject NavigationManager NavigationManager;
@inject ClassesHubService ClassesHubService;


<PageTitle>Course "@(_course is not null ? _course.Name : "")" classes</PageTitle>

<div class="container my-4">
  @if (_course != null)
  {
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/courses">Courses</a></li>
        <li class="breadcrumb-item active" aria-current="page">@_course.Name classes</li>
      </ol>
    </nav>
  }

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">@(_course != null ? $"Course \"{_course.Name}\" classes" : "Classes")</h1>
    <NavLink href="@($"/admin/courses/{CourseId}/classes/create")" class="btn btn-primary">+ Create class</NavLink>
  </div>

  @if (_successMessage is not null)
  {
    <div class="alert alert-success" role="alert">@_successMessage</div>
  }

  @if (_errorMessage is not null)
  {
    <div class="alert alert-danger" role="alert">@_errorMessage</div>
  }

  @if (!_isDataLoaded)
  {
    <div class="d-flex justify-content-center align-items-center py-5">
      <div class="spinner-border text-primary" role="status" aria-label="Loading classes"></div>
      <span class="ms-2 text-muted">Loading classes...</span>
    </div>
  }
  else if (_classes is null || _classes.Items.Count == 0)
  {
    <div class="card shadow-sm">
      <div class="card-body text-center py-5">
        <p class="text-muted mb-3">No classes found.</p>
        <NavLink href="@($"/admin/courses/{CourseId}/classes/create")" class="btn btn-primary">Create class</NavLink>
      </div>
    </div>
  }
  else
  {
    <div class="card shadow-sm">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-light">
            <tr>
              <th style="width:18%">Registration deadline</th>
              <th style="width:18%">Start Date</th>
              <th style="width:18%">End date</th>
              <th style="width:12%">Max Students</th>
              <th style="width:14%">Enrolled</th>
              <th class="text-end" style="width:20%">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var courseClass in _classes.Items)
            {
              var isLoading = _processingClassId == courseClass.Id;
              <tr>
                <td>@courseClass.RegistrationDeadline.ToString("dd.MM.yyyy")</td>
                <td>@courseClass.CourseStartDate.ToString("dd.MM.yyyy")</td>
                <td>@courseClass.CourseEndDate.ToString("dd.MM.yyyy")</td>
                <td>@courseClass.MaxStudents</td>
                <td>
                  <span class="badge text-bg-secondary">@courseClass.EnrollmentsCount</span>
                </td>
                <td class="text-end">
                  <div class="btn-group" role="group" aria-label="Actions for class @courseClass.Id">
                    <NavLink href="@($"/admin/courses/{CourseId}/classes/{courseClass.Id}/enrollments")"
                             class="btn btn-outline-info btn-sm">Students
                    </NavLink>
                    <NavLink href="@($"/admin/courses/{courseClass.CourseId}/classes/{courseClass.Id}")"
                             class="btn btn-outline-secondary btn-sm">Edit
                    </NavLink>
                    @if (isLoading)
                    {
                      <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                      <span class="ms-1">Deleting...</span>
                    }
                    else
                    {
                      <button class="btn btn-outline-danger btn-sm"
                              @onclick="() => ShowDeleteConfirmation(courseClass.Id)">Delete
                      </button>
                    }
                  </div>
                </td>
              </tr>
            }
            </tbody>
          </table>
        </div>
      </div>
      @if (_classes.TotalPages > 1)
      {
        <div class="card-footer bg-white">
          <div class="d-flex justify-content-center">
            <Pager records="_classes" ChangePage="GetClasses"/>
          </div>
        </div>
      }
    </div>
  }
</div>

@if (_showDeleteConfirmation)
{
  <Modal Title="Confirm Delete" OnConfirm="ConfirmDelete" OnCancel="CancelDelete">
    <p>Do you really want to delete this class?</p>
  </Modal>
}

@code {
  [Parameter] public Guid CourseId { get; set; }
  private PagedList<ClassListItemResponse>? _classes;
  private int Page { get; set; }
  private CourseResponse? _course;
  private bool _showDeleteConfirmation;
  private Guid _classIdToDelete;
  private Guid? _processingClassId;
  private bool _redirectTo404;
  private bool _isDataLoaded;
  private string? _errorMessage;
  private string? _successMessage;
  private bool _isHubInitialized;

  private static readonly string[] ClassHubSuccessMessages =
  [
    ClassHubMessage.ClassCreated,
    ClassHubMessage.ClassUpdated,
    ClassHubMessage.ClassDeleted,
  ];

  private static readonly string[] ClassHubErrorMessages =
  [
    ClassHubMessage.ClassCreateRequestRejected,
    ClassHubMessage.ClassUpdateRequestRejected,
    ClassHubMessage.ClassDeleteRequestRejected
  ];

  protected override async Task OnAfterRenderAsync(bool firstRender)
  {
    if (firstRender)
    {
      try
      {
        _course = await CoursesApiService.GetCourse(CourseId);
        await GetClasses();
        await InitializeHubConnectionAsync();
      }
      catch (NotFoundException)
      {
        _redirectTo404 = true;
      }

      _isDataLoaded = true;
      StateHasChanged();
    }

    if (_redirectTo404)
    {
      _redirectTo404 = false;
      NavigationManager.NavigateTo("/404", replace: true);
    }
  }

  private async Task InitializeHubConnectionAsync()
  {
    if (_isHubInitialized) return;

    try
    {
      ClassesHubService.OnClassNotification += HandleNotification;
      await ClassesHubService.StartConnectionAsync();
      _isHubInitialized = true;
    }
    catch (Exception ex)
    {
      _errorMessage = $"Error initializing class notifications: {ex.Message}";
    }
  }

  private void HandleNotification(ClassMessage message)
  {
    if (ClassHubSuccessMessages.Contains(message.MessageType))
    {
      HandleSuccessMessage(message);
    }
    else if (ClassHubErrorMessages.Contains(message.MessageType))
    {
      HandleErrorMessage(message);
    }
  }

  private void HandleSuccessMessage(ClassMessage message)
  {
    _successMessage = message.Message;
    _processingClassId = null;
    _ = InvokeAsync(async () =>
    {
      await GetClasses();
      StateHasChanged();
    });
  }

  private void HandleErrorMessage(ClassMessage message)
  {
    _errorMessage = message.Message;
    _processingClassId = null;
    _ = InvokeAsync(StateHasChanged);
  }

  protected async Task GetClasses(int page = 1)
  {
    try
    {
      Page = page;
      _classes = null;
      _classes = await ClassesApiService.GetClassListAsync(CourseId.ToString(), page);
    }
    catch (NotFoundException)
    {
      _redirectTo404 = true;
      StateHasChanged();
    }
  }

  private void ShowDeleteConfirmation(Guid courseId)
  {
    _classIdToDelete = courseId;
    _showDeleteConfirmation = true;
  }

  private async Task ConfirmDelete()
  {
    _showDeleteConfirmation = false;
    _processingClassId = _classIdToDelete;
    await ClassesApiService.DeleteClass(CourseId, _classIdToDelete);
  }

  private void CancelDelete()
  {
    _showDeleteConfirmation = false;
  }

  public async ValueTask DisposeAsync()
  {
    if (!_isHubInitialized) return;
    ClassesHubService.OnClassNotification -= HandleNotification;
    _isHubInitialized = false;
    await ClassesHubService.StopConnectionAsync();
  }
}
